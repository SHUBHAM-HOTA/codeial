<header>
    <div id="outer-div">
        <div id="title-div">
            <h1 id="main-title">codeial</h1>
        </div>
        <div id="div-sign-in-out">
            <ul id="sign-in-out-profile">
                <% if (locals.user){ %>
                    <li>
                        <a href="/users/profile/<%= locals.user.id %>">
                            <%= user.name %></li>
                        </a>
                        
                    <li>
                        <a href="/users/sign-out">sign out</a>
                    </li>
                <% }else{ %>
                    <li>
                        <a href="/users/sign-in">sign in</a>
                    </li>
                    <li>
                        <a href="/users/sign-up">sign up</a>
                    </li>
                <% } %>   
            </ul>
        </div>
    </div>
</header>

